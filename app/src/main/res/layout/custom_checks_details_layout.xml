<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/promotion_bg"
        android:layout_width="405dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#4BB8B5B5"
        android:textAlignment="gravity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_add"
        android:layout_width="61dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_slab"
        android:text="x 1"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/product_nom"
        app:layout_constraintTop_toBottomOf="@+id/product_code"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_slab"
        android:text="115 руб."
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/promotion_bg"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toEndOf="@+id/product_descr"
        app:layout_constraintTop_toBottomOf="@+id/product_add"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/product_code"
        android:layout_width="331dp"
        android:layout_height="4dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/roboto_slab"
        android:text="21.06.20"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/promotion_bg"
        app:layout_constraintTop_toTopOf="@+id/promotion_bg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/product_descr"
        android:layout_width="172dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Сумма покупки"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/promotion_bg"
        app:layout_constraintTop_toBottomOf="@+id/product_nom"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/product_nom"
        android:layout_width="236dp"
        android:layout_height="52dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Номенклатура"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/promotion_bg"
        app:layout_constraintTop_toBottomOf="@+id/product_code"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
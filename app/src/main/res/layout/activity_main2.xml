<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.romanishin.Main2Activity"
    android:background="@drawable/first_display">

    <EditText
        android:id="@+id/loginText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="enter login"

        android:onClick="onClick_loginText"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_act_2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/telText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="you password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginText"
        tools:ignore="MissingConstraints"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/logo_act_2"
        android:layout_width="402dp"
        android:layout_height="322dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        android:onClick="rmn_onClick"/>

    <ImageView
        android:id="@+id/btnSend"
        android:layout_width="209dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:onClick="pw_onClick"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telText"
        app:srcCompat="@drawable/bttn_check" />
</androidx.constraintlayout.widget.ConstraintLayout>
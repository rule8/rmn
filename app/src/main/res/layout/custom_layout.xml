<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/promotion_bg"
        android:layout_width="399dp"
        android:layout_height="108dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/akciya_bg" />

    <TextView
        android:id="@+id/promotion_price_old"
        android:layout_width="137dp"
        android:layout_height="26dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="147 руб."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/promotion_bg"
        app:layout_constraintTop_toBottomOf="@+id/promotion_product"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/promotion_price_new"
        android:layout_width="137dp"
        android:layout_height="26dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="21dp"
        android:fontFamily="@font/roboto_slab"
        android:text="115 руб."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/promotion_bg"
        app:layout_constraintStart_toEndOf="@+id/promotion_price_old"
        app:layout_constraintTop_toBottomOf="@+id/promotion_product"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/promotion_period"
        android:layout_width="221dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/roboto_slab"
        android:text="C 21.05.20 по 21.06.20"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@+id/promotion_bg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="95dp" />

    <TextView
        android:id="@+id/promotion_product"
        android:layout_width="356dp"
        android:layout_height="25dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Сосиски МОЛОЧНЫЕ. 415гр."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/promotion_period"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>